<Window x:Class="CaloryCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaloryCalculator"
        xmlns:viewmodel="clr-namespace:CaloryCalculator"
        mc:Ignorable="d"
            Title="MainWindow" Height="600" Width="1000" ResizeMode="NoResize">
        <Window.DataContext>
            <viewmodel:ViewModel/>
        </Window.DataContext>
    <Grid>
        <Button Height="50" Width="200" Margin="178,491,614,28" Content="ОБНОВИТЬ" FontSize="25" RenderTransformOrigin="0.965,0.87"/>
        <ListBox Width="400"
                Height="420"
                x:Name="dishes"
                ItemsSource="{Binding DishesList}"
                Background="Transparent" 
                FontSize="14" 
                Margin="82,24,510,83" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left"/>
        <ListBox Height="200" Width="400" RenderTransformOrigin="1.118,0.505" Margin="514,236,78,133"/>
        <ListBox Height="200" Width="400" RenderTransformOrigin="1.118,0.505" Margin="514,24,78,345"/>
        <TextBlock Height="100" Width="400" Margin="514,440,78,29" TextAlignment="Center"/>
    </Grid>
</Window>
