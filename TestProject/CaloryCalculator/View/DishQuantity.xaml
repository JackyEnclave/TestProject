<Window x:Class="CaloryCalculator.View.DishQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:CaloryCalculator"
        xmlns:local="clr-namespace:CaloryCalculator.View"
        mc:Ignorable="d"
        Title="Ну, и сколько ты сожрал(а)?" Height="80" Width="300" ResizeMode="NoResize">
        <Window.DataContext>
            <viewmodel:ViewModel/>
        </Window.DataContext>
    <Grid>
        <TextBox
            Height="25"
            Width="150"
            Text="{Binding DishQuantity, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
