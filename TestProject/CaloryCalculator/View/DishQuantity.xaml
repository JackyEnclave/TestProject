<Window x:Class="CaloryCalculator.View.DishQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:CaloryCalculator"
        xmlns:local="clr-namespace:CaloryCalculator"
        mc:Ignorable="d"
        Title="Ну, и сколько ты сожрал(а)?" Height="93" Width="300" ResizeMode="NoResize" >
    <Window.DataContext>
        <viewmodel:ViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox
            Height="24"
            Margin="92,13,92,0"
            FontFamily="Courier New"
            FontSize="20"
            FontWeight="Bold"
            TextAlignment="Center"
            Text="{Binding DishQuantity}" VerticalAlignment="Top"/>
    </Grid>
</Window>
