<Window x:Class="CaloryCalculator.View.DishQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:CaloryCalculator"
        xmlns:local="clr-namespace:CaloryCalculator"
        mc:Ignorable="d"
        Title="Ну, и сколько ты сожрал(а)?" Height="120" Width="300" ResizeMode="NoResize">
        <Window.DataContext>
            <viewmodel:ViewModel/>
        </Window.DataContext>
    <Grid>
        <TextBox
            Height="25"
            Width="150"
            Margin="72,14,72,52"/>
        <Button 
            Height="25"
            Width="80" RenderTransformOrigin="0.513,1.254" Margin="107,51,107,15"
            Content="OK"
            Command="{Binding ButtonOK}"/>
    </Grid>
</Window>
